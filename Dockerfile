# Использовать образ Python в качестве базы
FROM python:3.10

# Установить рабочую директорию в контейнере
WORKDIR /app

# Скопировать файл зависимостей в рабочую директорию
COPY requirements.txt .

# Установить зависимости
RUN pip install -r requirements.txt

# Скопировать содержимое локальной директории src в рабочую директорию
COPY source_code/ .

# Команда для запуска при старте контейнера
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]

